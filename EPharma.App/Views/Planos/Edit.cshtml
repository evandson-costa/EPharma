@model EPharma.App.ViewModels.PlanoViewModel

@{
    ViewData["Title"] = "Editando o Plano de Saúde - " + Model.NomePlano;
}

<h4 style="padding-top:30px"> @ViewData["Title"]</h4>
<hr />
<div class="row">
    <div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NomePlano" class="control-label"></label>
                <input asp-for="NomePlano" class="form-control" />
                <span asp-validation-for="NomePlano" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col">
                    <label asp-for="DataInicioVigencia" class="control-label"></label>
                    <input asp-for="DataInicioVigencia" class="form-control" />
                    <span asp-validation-for="DataInicioVigencia" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="DataFimVigencia" class="control-label"></label>
                    <input asp-for="DataFimVigencia" class="form-control" />
                    <span asp-validation-for="DataFimVigencia" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group" style="padding-top:15px">
                <dl>
                    <dt>
                        @Html.DisplayNameFor(model => model.DataCadastro)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.DataCadastro)
                    </dd>
                </dl>
            </div>
            <div style="padding-top:10px">
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsPJ" /> @Html.DisplayNameFor(model => model.IsPJ)
                    </label>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a class=" btn btn-info" href="javascript:window.history.back()">Voltar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>

</script>
}
